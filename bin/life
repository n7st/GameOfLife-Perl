#!/usr/bin/env perl

use strict;
use warnings;

use FindBin;

use lib "$FindBin::RealBin/../lib";

use Life::Simulation;

my $life = Life::Simulation->new({
    tick_delay => 0.1,
    seed       => [
        # Blinker
        { x => 2, y => 1 },
        { x => 2, y => 2 },
        { x => 2, y => 3 },

        # Blinker
        { x => 25, y => 25 },
        { x => 25, y => 26 },
        { x => 25, y => 27 },

        # Glider
        { x => 12, y => 12 },
        { x => 13, y => 13 },
        { x => 14, y => 13 },
        { x => 14, y => 12 },
        { x => 14, y => 11 },
    ],
    #seed => [
    #    { x => 4, y => 5 },
    #    { x => 4, y => 6 },
    #    { x => 4, y => 7 },
    #    { x => 4, y => 8 },
    #    { x => 5, y => 5 },
    #    { x => 5, y => 6 },
    #    { x => 5, y => 7 },
    #    { x => 5, y => 8 },
    #    { x => 5, y => 8 },
    #],
});

$life->simulate();

